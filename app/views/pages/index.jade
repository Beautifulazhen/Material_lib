extends ../layout

block content
	.container
		.row
			each cat in categories
				.panel.panel-default
					.panel-heading
						h3
							a(href='/results?cat=#{cat._id}&p=0') #{cat.name}
				.panel-body
					if cat.materials && cat.materials.length > 0
						each item in cat.materials
							.col-md-2
								.thumbnail
									a(href="/material/#{item._id}")
										img(src="#{item.img}",alt="#{item.title}")
									.caption
										h3 #{item.title}
										p #{item.description}