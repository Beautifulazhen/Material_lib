extends ../layout

block content
	.container
		.row
			.panel.panel-default
				.panel-heading
					h3 #{keyword}
			.panel-body
				if results && results.length > 0
					each item in results
						.col-md-2
							.thumbnail
								a(href="/material/#{item._id}")
									img(src="#{item.img}",alt="#{item.title}")
								.caption
									h3 #{item.title}
									p #{item.description}
			ul.pagination
				- for (var i=0;i<totalPage;i++){
					- if(currentPage == (i+1)){

							li.active
								span #{currentPage}
					- }
					- else{
							li
								a(href="/results?p=#{i}&#{query}") #{i+1}
					- }
				- }